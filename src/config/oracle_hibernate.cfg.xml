<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:XE</property>
    <property name="hibernate.connection.username">locadora</property>
    <property name="hibernate.connection.password">lejoba</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    
    <mapping class="entity.Pessoa"/>
    <mapping class="entity.Cliente"/>
    <mapping class="entity.Funcionario"/>
    <mapping class="entity.Endereco"/>
    <mapping class="entity.Telefone"/>
    <mapping class="entity.Locacao"/>
    <mapping class="entity.Livro"/>
    <mapping class="entity.Mensagem"/>
    
    
    
    
    
    
  </session-factory>
</hibernate-configuration>
